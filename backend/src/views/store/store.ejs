    <!-- Modal -->
    <div class="modal" id="modal">
      <div class="modal-content" id="modalContent">
        <button class="modal-close" onclick="closeModal()">‚úï</button>
        <div class="modal-header">
          <div class="modal-title" id="modalTitle">Preview</div>
          <div
            id="modalSubtitle"
            style="
              color: var(--text-secondary);
              font-size: 0.95rem;
              margin-top: 6px;
            "
          ></div>
        </div>

        <div
          id="modalBody"
          style="color: var(--text-secondary); font-size: 0.95rem"
        >
          <!-- dynamic content -->
        </div>

        <div
          class="confirmation-actions"
          id="modalActions"
          style="margin-top: 1.5rem"
        >
          <button class="btn-cancel" onclick="closeModal()">Cancel</button>
          <button class="btn-confirm" id="modalConfirmBtn">Redeem</button>
        </div>
        <div
          id="modalMessage"
          style="margin-top: 1rem; color: var(--success); display: none"
        ></div>
      </div>
